        <title>Best Discord Bot</title>

<style>
.featureCard {
margin: 10%;
text-align: center;
display: inline-block;
background-color: #262932;
border-bottom: 5px solid #262932;
border-top: 5px solid #262932;
border-left: 5px solid #0096FF;
border-right: 5px solid #0096FF;
border-radius: 20px;
min-width: 300px;
max-width: 300px;
height: 200px;
transition: 0.5s ease-in-out;
overflow: hidden;
user-select: none;
}
 
 
.featureCard:hover {
transform: translateY(-10px);
}

#clickme{
width: 140px;
text-decoration: none;
  margin:20px 10px;
  color: black;
  font-size: 17px;
  border:1px solid white;
  font-weight: 500;
  background: white;
  border-radius: 20px;
  padding: 10px;
  cursor:pointer;
  transition: .3s;
}


</style>
</head>

<body>


<div class="col-lg-2">
 
                                <div class="featureCard px-2 py-4 sm:w-full sm:py-2 lg:w-1/4">
                                    <div class="flex justify-center"></div>
                                   <p class="text-xl font-bold text-center">
<input required="" maxlength="3" id="prefix" name="prefix" placeholder="Prefix Here">

                                    </p>
                                    <p class="text-base font-medium text-center ">

                              <input type="submit" value="Save Changes." id="clickme" class="button" />       

</p>
                                </div>


</center>
    

</form>
   <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
    $(document).ready(function() {
        $("#clickme").click(function() {
            $.ajax({
                type: "POST",
                url: "/prefix/<%= guild.id %>",
                data: { prefix: $("#prefix").val()},
                success: swal("Done!","" , "success")
            });
        });
    });
    </script>

<script>
function w3_open() {
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("myOverlay").style.display = "block";
}

function w3_close() {
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("myOverlay").style.display = "none";
}


</script>

</body>
</html>